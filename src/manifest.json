{
    "manifest_version": 2,

    "name": "ION Ticker",
    "description": "This extension shows latest price ticker of ION.",
    "version": "0.0.1",

    "browser_action": {
        "default_icon": "images/icon.png"
    },

    "background": {
        "persistent": true,
        "page": "background.html"
    },

    "options_page": "options.html",

    "permissions": [
        "http://www.ionexplorer.com/"
    ]
}
